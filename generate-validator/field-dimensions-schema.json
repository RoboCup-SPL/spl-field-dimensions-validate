{
	"$schema": "http://json-schema.org/schema#",
	"$id": "https://spl.robocup.org/2021/field-dimensions-schema.json",
	"type": "object",
	"properties": {
		"field": {
			"type": "object",
			"properties": {
				"length": {
					"type": "number",
					"minimum": 3,
					"maximum": 20
				},
				"width": {
					"type": "number",
					"minimum": 3,
					"maximum": 20
				},
				"lineWidth": {
					"type": "number",
					"minimum": 0.01,
					"maximum": 5
				},
				"penaltyMarkerSize": {
					"type": "number",
					"minimum": 0.01,
					"maximum": 5
				},
				"goalBoxAreaLength": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				},
				"goalBoxAreaWidth": {
					"type": "number",
					"minimum": 1,
					"maximum": 10
				},
				"penaltyAreaLength": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				},
				"penaltyAreaWidth": {
					"type": "number",
					"minimum": 1,
					"maximum": 10
				},
				"penaltyCrossDistance": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				},
				"centerCircleDiameter": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				},
				"borderStripWidth": {
					"type": "number",
					"minimum": 0.1,
					"maximum": 1000
				}
			},
			"required": ["length", "width", "lineWidth", "penaltyMarkerSize", "penaltyAreaLength", "penaltyAreaWidth", "penaltyCrossDistance", "centerCircleDiameter", "borderStripWidth"]
		},
		"goal": {
			"type": "object",
			"properties": {
				"postDiameter": {
					"type": "number",
					"minimum": 0.01,
					"maximum": 4
				},
				"height": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				},
				"innerWidth": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				},
				"depth": {
					"type": "number",
					"minimum": 0.3,
					"maximum": 10
				}
			},
			"required": ["postDiameter", "height", "innerWidth", "depth"]
		}
	},
	"required": ["field", "goal"]
}
